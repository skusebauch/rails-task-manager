<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        ☑️ <%= link_to task.title, task_path(task) %>
      <% else %>
        🤯 <%= link_to task.title, task_path(task) %>
      <% end %>
    </li>
  <% end %>
</ul>

<p><%= link_to "➕ Create a new task" , tasks_new_path %></p>
