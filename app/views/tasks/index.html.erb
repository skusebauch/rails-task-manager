<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        ✅
      <% else %>
        ❎
      <% end %>
      <%= link_to task.title, task_path(task) %>
      -
      <%= link_to "🗑", task_path(task), method: :delete,
      data: { confirm: "Do you want to delete #{task.title}?" } %>
    </li>
  <% end %>
</ul>
<hr>
<p><%= link_to "➕ Create a new task" , tasks_new_path %></p>

